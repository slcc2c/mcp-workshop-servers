{
  "name": "mcp-workshop-servers",
  "version": "1.0.0",
  "description": "MCP Servers for CS Experimentation Workshop - 5-minute magic for rapid prototyping",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "test": "vitest",
    "test:unit": "vitest run tests/unit",
    "test:integration": "vitest run tests/integration",
    "test:e2e": "vitest run tests/e2e",
    "lint": "eslint src --ext .ts,.tsx",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write .",
    "mcp:start": "node scripts/start-servers.js",
    "mcp:stop": "node scripts/stop-servers.js",
    "mcp:status": "node scripts/server-status.js",
    "mcp:install": "node scripts/install-server.js",
    "mcp:logs": "node scripts/logs.js"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "ai",
    "workshop",
    "experimentation"
  ],
  "author": "CS Experimentation Workshop Team",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/pg": "^8.10.9",
    "@types/dockerode": "^3.3.23",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "eslint": "^8.55.0",
    "prettier": "^3.1.1",
    "tsx": "^4.6.2",
    "typescript": "^5.3.3",
    "vitest": "^1.0.4"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.5.0",
    "zod": "^3.22.4",
    "winston": "^3.11.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "express-rate-limit": "^7.1.5",
    "@octokit/rest": "^20.0.2",
    "dockerode": "^4.0.0",
    "chokidar": "^3.5.3",
    "ioredis": "^5.3.2",
    "pg": "^8.11.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}